%h2 Search for users
.container
  .row
    .col-md-8.offset-md-2
      = form_tag("/search", method: "get") do
        .form-group
          = label_tag(:search, "Filter users:")
        .form-group
          = text_field_tag(:search, nil, class: 'form-control')
        .form-group
          = submit_tag("Search", class: "btn btn-primary btn-lg btn-block")

  .row
    .col-md-8.offset-md-2
      - if @filtered_users.blank?
        - @users.each do |user|
          = user.email
          %hr
      - else
        - @filtered_users.each do |user|
          = user.email
