.container
  .row
    .col-4.offset-4
      %h2 Sign up
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group
          = f.input :email, input_html: { class: 'form-control', placeholder: "email" }
        .form-group
          = f.input :password, input_html: { class: 'form-control', placeholder: "password" }
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
        .form-group
          = f.input :password_confirmation, input_html: { class: 'form-control', placeholder: "password" }
        .form-group
          = f.button :submit, "Register", class: "btn btn-md btn-primary btn-block"
      = render "devise/shared/links"
