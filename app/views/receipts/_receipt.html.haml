.card.mb-4.box-shadow
  .card-header
    = receipt.name
  .card-body
    %p.card-text= receipt.amount
    %ul
      - receipt.contributors.each do |contributor|
        %li
          = contributor.short_email
          = contributor.debt_with_currency
    .d-flex.justify-content-between.align-items-center
      .btn-group
        = link_to "Edit", edit_group_receipt_path(id: receipt.id, group_id: @group.id), class: "button btn btn-sm btn-outline-secondary"
        = link_to "Delete", group_receipt_path(id: receipt.id, group_id: @group.id), method: :delete, class: "button btn btn-sm btn-outline-secondary"
      %small.text-muted
        = receipt.created_at
